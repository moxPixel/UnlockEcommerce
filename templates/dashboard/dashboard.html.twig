					label: "Inscriptions",
					data: stars2,
					backgroundColor: "#465ddd80",
					borderColor: "#465ddd80",
					borderRadius: 50,
					borderWidth: 1
				},
			]
		},
		options: {
			plugins: {
				legend: {
					display: false,
					labels: false
				},

			},
			scales: {
				y: {
					grid: {
						display: false
					},
					beginAtZero: true,
				},
				x: {
					grid: {
						display: false
					},
					beginAtZero: true

				}

			}

		}
	});



	var ctx = document.getElementById("line");

	var stars = [{% for data in stats.userByMonth %}{{ data.total }}, {% endfor %}]
	var frameworks = [{% for data in stats.userByMonth %}"{{ data.0.createdat |date('M') }}", {% endfor %}];
	var myChart = new Chart(ctx, {
		type: "line",
		data: {
			labels: frameworks,
			datasets: [
				{
					label: "commandes",
					data: stars,
					backgroundColor: "#d60cb4",
					borderColor: "#d60cb4",

					borderWidth: 3
				},
			]
		},
		options: {
			plugins: {
				legend: {
					display: false,
					labels: false
				},

			},
			scales: {
				y: {
					grid: {
						display: false
					},
					beginAtZero: true,
				},
				x: {
					grid: {
						display: false
					},
					beginAtZero: true

				}

			}

		}
	});

</script>
