<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>

	var ctx = document.getElementById("bar");

	var stars2 = [{% for data in stats.userByMonth %}{{ data.total }}, {% endfor %}]
	var frameworks2 = [{% for data in stats.userByMonth %}"{{ data.0.createdat |date('M') }}", {% endfor %}];
